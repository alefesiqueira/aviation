            height: 250px; /* Altura ajustada para o widget com mapa */
            display: flex; /* Torna o elemento e seu conteúdo visíveis */
            justify-content: center; /* Centraliza horizontalmente o iframe dentro da barra */
            align-items: center; /* Centraliza verticalmente o iframe dentro da barra */
        }

        /* Estilo para o iframe */
        .footer-iframe-wrapper iframe {
            width: 100%; /* Ocupa 100% da largura do seu contêiner */
            height: 100%; /* Ocupa 100% da altura do seu contêiner */
            border: none; /* Remove a borda padrão do iframe */
            display: block; /* Remove espaço extra abaixo do iframe */
        }
